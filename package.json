{
  "name": "auriclabs-packages",
  "private": true,
  "version": "0.0.0",
  "prettier": "@auriclabs/prettier-config",
  "packageManager": "pnpm@9.0.6",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:affected": "turbo run build --filter=...[origin/master]",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:affected": "turbo run test --filter=...[origin/master]",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:staged": "lint-staged",
    "lint:affected": "turbo run lint --filter=...[origin/master]",
    "typecheck": "turbo run typecheck",
    "typecheck:affected": "turbo run typecheck --filter=...[origin/master]",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "3.2.4",
    "chokidar": "4.0.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "eslint": "9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "ts-node": "^10.9.2",
    "tsdown": "0.15.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.44.1",
    "vite": "7.1.7",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@auriclabs/env": "workspace:*",
    "@auriclabs/eslint-config": "workspace:*",
    "@auriclabs/logger": "workspace:*",
    "@auriclabs/prettier-config": "workspace:*",
    "@auriclabs/sst-types": "workspace:*",
    "@auriclabs/ts-config": "workspace:*",
    "@auriclabs/vitest-config": "workspace:*"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "overrides": {
      "hono@<4.9.7": ">=4.9.7"
    }
  }
}